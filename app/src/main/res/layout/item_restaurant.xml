<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/img_resto_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/baseline_restaurant_24"
        />

    <TextView
        android:id="@+id/txt_resto_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Name"
        android:textSize="24dp"
        android:layout_toRightOf="@id/img_resto_icon"
        android:layout_alignTop="@id/img_resto_icon"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/txt_resto_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resto Type"
        android:textSize="16dp"
        android:layout_alignLeft="@id/txt_resto_name"
        android:layout_below="@id/txt_resto_name"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>